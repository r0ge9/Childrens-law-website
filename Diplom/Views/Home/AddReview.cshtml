@model Review
	@{
	@using Diplom.Domain.Entities
	@using Diplom.Service

}
    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <h1 class="mb-2 bread">Ваш отзыв</h1>
            <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Главная <i class="ion-ios-arrow-forward"></i></a></span> <span>Отзывы <i class="ion-ios-arrow-forward"></i></span></p>
          </div>
        </div>
      </div>
    </section>

    <div class="row justify-content-end">
				<div class="col-md-6 py-5 px-md-5 bg-primary">
			  <div class="heading-section heading-section-white ftco-animate mb-5">
				<h2 class="mb-4">Оставьте отзыв!</h2>
				<p></p>
			  </div>
			  <form asp-controller="Home" asp-action="AddReview" method="post" class="appointment-form ftco-animate">
						<div class="d-md-flex">
							<div class="form-group">
								<input type="text" class="form-control" asp-for="Name"  placeholder="Имя">
							</div>
							<div class="form-group ml-md-4">
								<input type="text" class="form-control" asp-for="Image" placeholder="Ссылка на фото">
							</div>
						</div>
						<div class="d-md-flex">
							<div class="form-group">
								<div class="form-field">
							  <div class="select-wrap">
					  
					 @* <select name="list" id=""  class="form-control">
						  <option value="">Отец или мать?</option>
						<option value="Мать" id="Мать" >Мать</option>
						<option value="Отец" id="Отец" >Отец</option>
					  </select>*@
					  <input type="text" class="form-control" asp-for="Sex" placeholder="Профессия или пол">
					</div>
					  </div>
							</div>
							<!-- <div class="form-group ml-md-4">
								<input type="text" class="form-control" placeholder="Phone">
							</div> -->
						</div>
						<div class="d-md-flex">
							<div class="form-group">
					  @*<textarea name="" id="" cols="30" rows="2" class="form-control" asp-for="Text" placeholder="Текст"></textarea>*@
					  @Html.TextAreaFor(x=>x.Text,new {@class="form-control",@placeholder="Текст"})
					</div>
					<div class="form-group ml-md-4">
					  <input type="submit" value="Отправить" class="btn btn-secondary py-3 px-4">
					</div>
						</div>
					</form>
				</div>
		</div>
