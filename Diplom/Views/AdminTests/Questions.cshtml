@Model IQueryable<Question> 
<section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');">
	  <div class="overlay"></div>
	  <div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
		  <div class="col-md-9 ftco-animate text-center">
			<h1 class="mb-2 bread">О нас</h1>
			 <p class="breadcrumbs"><span class="mr-2"><a href="/Admin/Admin">Админ-главная <i class="ion-ios-arrow-forward"></i></a></span><span class="mr-2"> <a href="/Admin/Admin">Тесты <i class="ion-ios-arrow-forward"></i></a></span><span class="mr-2"> <a>Вопросы <i class="ion-ios-arrow-forward"></i></a></span></p>
		  </div>
		</div>
	  </div>
	</section>

		<section class="ftco-section ftco-no-pt ftc-no-pb">
			<div class="container">
				@foreach(Question question in Model)
				{
				<div class="text-about">
					<div class="text-about">
						<div class="text px-4 ftco-animate">
				  <h2 class="mb-4">@question.Title</h2>
							@{
								var answers = question.Answers.Split(';');
							}
							@for(int i=0;i<answers.Length;i++)
							{
								@Html.Raw('-'+answers[i]+"\n");
							}
							<p>Правильный ответ: @question.RightAnswer</p>
								<form id="form-@question.Id" asp-action="DeleteQuestion" asp-controller="AdminTests" method="post">
										<input type="hidden" name="id" value="@question.Id">
														<a href="#" class="mr-2" onclick="document.getElementById('form-@question.Id').submit()" >Удалить</a>

										</form>
												  <a asp-controller="AdminTests" asp-action="EditQuestion" asp-route-id="@question.Id" class="mr-2">Редактировать</a>
						</div>
					</div>
					</div>
					}
					</div>

		</section>