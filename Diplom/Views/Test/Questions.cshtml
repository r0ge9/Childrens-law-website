@model Question
@{
    string[] arr=Model.Answers.Split(';');
}
<section class="hero-wrap hero-wrap-2" style="background-image: url(/images/bg_2.jpg)">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Прохождение теста</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index">Главная <i class="ion-ios-arrow-forward"></i></a></span><span class="mr-2"><a href="/Test/Tests">Тесты <i class="ion-ios-arrow-forward"></i></a></span> <span>Текущий тест <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>


        <section class="ftco-section">
        <div class="container">

        <h1  align="center">@Model.Title</h1>
        <form asp-controller="Test" asp-action="Questions" method="post">
        <input type="radio" name="q"/><label>@arr[0]</label>
        <input type="radio" name="q"/><label>@arr[1]</label>
        <input type="radio" name="q"/><label>@arr[2]</label>
        <input type="radio"  name="q" id="right"/><label>@Model.RightAnswer</label>
        <input type="submit" value="Следующий вопрос" class="btn btn-primary py-3 px-5">
        </form>
            
            </div>
    </section>


